# ----------------------------
# Core runtime configuration
# ----------------------------
COMPOSE_PROJECT_NAME=gitvibedev
FRONTEND_PORT=8080
AI_PROVIDER=ollama
DEMO_MODE=true
LOG_LEVEL=info

# ----------------------------
# Secrets (auto-generated by installer)
# ----------------------------
SECRET_KEY=CHANGE_ME_SECRET_KEY
APP_ENCRYPTION_KEY=CHANGE_ME_APP_ENCRYPTION_KEY
BOOTSTRAP_ADMIN_TOKEN=CHANGE_ME_BOOTSTRAP_ADMIN_TOKEN

# ----------------------------
# PostgreSQL
# ----------------------------
POSTGRES_DB=gitvibe
POSTGRES_USER=gitvibe
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD

# ----------------------------
# Redis
# ----------------------------
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ----------------------------
# Ollama (local LLM default)
# ----------------------------
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# ----------------------------
# GitHub App OAuth readiness
# ----------------------------
GITHUB_APP_CLIENT_ID=CHANGE_ME_GITHUB_APP_CLIENT_ID
GITHUB_APP_CLIENT_SECRET=CHANGE_ME_GITHUB_APP_CLIENT_SECRET
GITHUB_APP_PRIVATE_KEY=CHANGE_ME_BASE64_PRIVATE_KEY
GITHUB_OAUTH_REDIRECT_URI=http://localhost:8080/api/github/oauth/callback

# ----------------------------
# OpenAI-compatible provider
# ----------------------------
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini


# ----------------------------
# Security defaults
# ----------------------------
ACCESS_TOKEN_TTL_MINUTES=20
REFRESH_TOKEN_TTL_HOURS=12
TOKEN_MAX_PREVIOUS_KEYS=2
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=30
MAX_REQUEST_BODY_BYTES=1048576
CSRF_PROTECTION_ENABLED=true
SECURITY_HEADERS_ENABLED=true
AUDIT_LOG_FILE=/data/logs/audit.log
VAULT_FILE=/data/vault/secrets.enc
PLUGIN_SANDBOX_ENABLED=false
PLUGIN_ALLOWLIST=
PLUGIN_TIMEOUT_SECONDS=5
JOB_QUEUE_POLL_SECONDS=1
JOB_RETRY_BASE_SECONDS=2

# ----------------------------
# Installer defaults
# ----------------------------
INSTALL_REPO_URL=https://github.com/your-org/gitvibedev.git
